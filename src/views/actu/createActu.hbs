<h1>Create actu</h1>

<form action="/actus/create" method="post">
  <div class="form-group">
    <label for="title">Titre*</label>
    <input class="form-control" type="text" id="title" name="title" placeholder="Titre du post" required>
  </div>

<!--
  <div class="form-group">
